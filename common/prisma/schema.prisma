datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Contest {
  id Int @id @default(autoincrement())
  serverId BigInt
  start DateTime @default(now())
  end DateTime?
  entries Entry[]
}

model Entry {
  id Int @id @default(autoincrement())
  contestId Int
  contest Contest @relation(fields: [contestId], references: [id], onDelete: Cascade)
  userId BigInt
  count Int @default(1)
  timestamp DateTime @default(now())
  notes String?
}
